datasource db {
  provider = "mysql"              
  url      = env("DATABASE_URL") 
}

generator client {
  provider = "prisma-client-js" 
}

model IUSer {
  id          Int                @id @default(autoincrement())
  name        String
  email       String             @unique
  password    String
  pokemons    IPokemon[]         
  userBalls   UserPokeball[]  
  pokedex     Pokedex []
}

model PokeBall {
  id                 Int                @id @default(autoincrement())
  name               String
  image              String
  capture_percentual Decimal
  userPokeball       UserPokeball[]
  price              Int
}

model Pokedex {
  id          Int      @id @default(autoincrement())
  IUSer       IUSer    @relation(fields: [userId], references: [id])
  userId Int
  pokemon   IPokemon @relation(fields: [idPokemon], references: [id])
  idPokemon Int
}

model UserPokeball {
  id          Int      @id @default(autoincrement())
  IUSer       IUSer    @relation(fields: [userId], references: [id])
  Pokeball    PokeBall @relation(fields: [pokeballId], references: [id])
  userId      Int
  pokeballId  Int      
  quantity    Int     
}
model IPokemon {
  id          Int     @id @default(autoincrement())
  name        String
  baseExperience Int
  speed Int
  hp Int
  attack Int
  defense  Int
  image String
  imageShiny String
  usersHaveIt IUSer[]
  crie String
  pokedex Pokedex []
}

